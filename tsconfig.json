{
    "compilerOptions": 
    {
        "baseUrl": "./",

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [ "ES2020" ],
        "module": "commonjs",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020",

        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
    }
}